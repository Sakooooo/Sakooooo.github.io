---
export interface Props {
	title: string;
	description: string;
        href: string;
	date: string;
}

const { href, title, description, date } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<!-- <div class="bd">
			<img src={image} alt={title} />
			<img src={image} alt={title} />
		</div> -->
		
		<h2>
			{title}
		</h2>
		<p>
			{description}
			<br>
			<small>{date}</small>
		</p>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 0.25rem;
		backdrop-filter: blur(8px);
		border-radius: 0.4rem;
		background-position: 100%;
		background-color: var(--background-secondary);
		transition: transform 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		border-bottom: 0.4rem solid transparent;
	}

	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1rem 1.3rem;
		border-radius: 0.35rem;
		opacity: 0.8;
		color: #e6e6e6 !important;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #e6e6e6
	}
	.link-card:is(:hover, :focus-within) {
		transform: scale(1.08);
		border-bottom: 0.4rem solid var(--accent);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: var(--accent);
	}

	.bd {
		position: relative;
		overflow: hidden;
	}

	img {
		position: relative;
		aspect-ratio: 16 / 9;
		object-fit: contain;
		background-color: #00000018;
		padding: 10px;
		border-radius: 0.35rem;
		width: calc(100% - 20px);
		height: auto;
		z-index: 2;
	}

	img:last-child {
		position: absolute;
		top: 0;
		left: 0;
		object-fit: cover;
		filter: blur(10px) brightness(0.7);
		z-index: 1;
	}
</style>
