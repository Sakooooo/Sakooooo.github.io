---
import Layout from '../layouts/Layout.astro';

---

<Layout title="Sako">
	<main>
	    <div class="background">
		<div class="square square1"></div>
		<div class="square square2"></div>
		<div class="square square3"></div>
		<div class="square square4"></div>
	    </div>
	    <div class="center">
		<h1>sako</h1>
	    </div>
	</main>
</Layout>

<style>
 html {
     overflow: hidden;
 }
 .center {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  min-height: 100vh;
 }
	h1 {
	    color: white;
	    font-size: 5rem;
	    text-align: center;
	}

 .background {
     position: fixed;
     z-index: -1;

     top: 0;
     left: 0;

     width: 100%;
     height: 100%;
 }

 .square {
     --size: 10px; /* CSS variable to make things easier */

     position: absolute;

     width: var(--size);
     height: var(--size);

     transform-origin: center;

     animation: square-animation 1s forwards ease;
     background: white;
 }

/* Place first square at the top-left */
.square1 {
  --end-x: calc(0vw);
  --end-y: calc(0vh);
}
/* Place second square at the top-right */
.square2 {
  --end-x: calc(100vw - var(--size));
  --end-y: calc(0vh);
}
/* Place third square at the bottom-left */
.square3 {
  --end-x: calc(0vw);
  --end-y: calc(100vh - var(--size));
}
/* Place fourth square at the bottom-left */
.square4 {
  --end-x: calc(100vw - var(--size));
  --end-y: calc(100vh - var(--size));
 }
 @keyframes square-animation {
     0% {
	 transform: translate(50vw, 50vw);
     }
     100% {
	 transform: translate(var(--end-x), var(--end-y));
     }
 }
</style>
